{
    "compilerOptions": {
       "lib": [
          "es5",
          "es6"
       ],
       "target": "es5",
       "module": "CommonJS",
       "moduleResolution": "node",
       "outDir": "./build",
       "rootDir": ".",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true
    },
    "include": [
       "src",
       "src/**/*.ts",
       "@types/**/*.d.ts"
   ]
 }